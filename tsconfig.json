{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "typeRoots": ["./node_modules/@types", "./types"],
        "outDir": "./dist",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "types/**/*"],
    "ts-node": {
        "files": true
    }
}